<h2>My planning</h2>


<% if !@events_found_by_title.empty? %>

<table border="1">

	<tr>
		<th>
			<%= @current_day %>
		</th>
	</tr>

	<% @events_found_by_title.each do |event| %>

	<% if event.event_date == @current_day %>

	<tr><td><%= event.title %><br/>
<%= event.begti.strftime("%H:%M%P") %>-<%= event.endti.strftime("%H:%M%P") %><br/>
		<%= link_to "view", event %>

	</td></tr>

	<% else %>
</table>
<hr/>
<table border="1">
	<% @current_day = event.event_date %>
	<tr>
		<th>
			<%= @current_day %>
		</th>
	</tr>
	<tr><td><%= event.title %><br/>
<!-- 	time conversion <br/> -->
		<%= link_to "view", event %>
	</td></tr>
	<% end #if/else block %>

	<% end #loop end %>

</table>

<% else %>

<table>
	<tr><td>no events were found</td></tr>
</table>

<% end #if %>

