

<div class="container-fluid">

	<div class="row">

		<div class="col-sm-6 col-sm-offset-2 table_header">

			<h2><%= @event.title %></h2>
</div>

<div class="col-sm-6 col-sm-offset-2 calendar bluebox">

			<div class="dropdown next_to">
				<button data-toggle="dropdown" class="btn btn-default dropdown-toggle">Action<span class="caret"></span></button>
				<ul class="dropdown-menu">
					<li><%= link_to "Edit", edit_event_path %></li>

					<% if @event.deleted %>
					<!-- Show the restore option -->
					<li><%= link_to "Restore", restore_path %></li>
					<% else %>
					<!-- Do not show the delete option if event is already deleted -->
					<li><%= link_to "Delete", event_path, method: :delete, data: { confirm: "Are you sure you want to delete this event?" } %></li>
					<% end %>
				</ul>
			</div>

			<table class="borderless"><!-- table-bordered -->

				<tr>
					<!-- <label for="event_event_date">Date</label> -->
					<!-- <input id="event_event_date" value="<%= @event.event_date %>" type="date" disabled> -->
					<td><%= @event.event_date.strftime('%a %-d %b %Y') %></td>
				</tr>

				<!-- <tr><td><label for="event_has_length">Has length BORRAR</label> -->

				<!-- (name, value = "1", checked = false, options = {}) -->
				<!-- <%= check_box_tag "event_has_length", nil, checked=@event.has_length, disabled: true %></td>
			</tr> -->


			<tr><td>
				<!-- <label for="event_begti">From </label> -->
				<!-- <input id="event_begti" value="<%= @event.begti.to_s(:time) %>" type="text" disabled> -->

				<% if @event.has_length %>
				From <%= @event.begti.strftime("%I:%M %P") %>
				<!-- <label for="event_endti">to </label> -->
				<!-- <input id="event_endti" value="<%= @event.endti.to_s(:time) %>" type="text" disabled> -->
				to <%= @event.endti.strftime("%I:%M %P") %>
				<% else %>
				At <%= @event.begti.strftime("%I:%M %P") %>
				<% end %>
			</td></tr>


			<tr><td><br/>
				<!-- <label for="event_is_private">Private event</label> -->
				Private event
				<%= check_box_tag "event_is_private", nil, checked=@event.is_private, disabled: true %>
			</td></tr>




			<tr><td><br/>
				Comments
			</td></tr>
			<tr><td><textarea size="40" maxlength="40" disabled><%= @event.comments %></textarea>
			</td>
		</tr>



		<tr>
			<td>
				<!-- <%= button_to "Back", events_path, method: :get, class: "btn btn-default" %>  -->

				<form method="get" action=<%= events_path %>>
					<button class="btn btn-default" value="Back">
						<span class="glyphicon glyphicon-chevron-left"></span>
					</button>
				</form>
			</td>

			<td><a href="https://www.google.com/calendar/render?action=TEMPLATE&text=<%= @event.title %>&dates=<%= @complete_date %>&details=<%= @event.comments %>&sf=true&output=xml" target="_blank">
				<%= image_tag "gc_button3.gif" %>
			</a></td>
		</tr>


	</table>


	<!-- <%= button_to "Edit", edit_event_path, method: :get, class: "btn btn-default" %> -->

	<!-- <%= button_to "Delete", event_path, method: :delete, class: "btn btn-default", data: { confirm: "Are you sure you want to delete this event?" } %> -->

</div>

</div>
</div>
