<!DOCTYPE html>
<html>
<head>
	<title>Plannie</title>
	<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>

 <!-- Google font -->
 <link href='http://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>  
</head>
<body>


  <!-- Display menu only if the user is logged: -->
  <% if !current_user.nil? %>

  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <!-- hamburger button for mobile -->
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Plannie", events_path, class: "navbar-brand glyphicon glyphicon-calendar" %>
      </div>


      <!-- Menu bar -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <!-- Search -->
        <ul class="nav navbar-nav">
          <li>
            <form class="navbar-form" action="/events/search">
              <input type="text" name="search_this" class="form-control" placeholder="Search event...">
              <button type="submit" value="search" class="btn btn-default glyphicon glyphicon-search">Search</button>
            </form>
          </li>

          <!-- Dropdown menu -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Menu<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <!-- <li><a href="#">My profile</a></li> -->

              <li><a id="popup" href=<%= events_path %> ><span class="glyphicon glyphicon-home menu_icon">
              </span>Home</a>
              </li>              
              
              <li><a id="popup" href=<%= show_private_events_path %> ><span class="glyphicon glyphicon-lock menu_icon">
              </span>Private events</a>
              </li>

              <li><a href=<%= show_deleted_events_path %>><span class="glyphicon glyphicon-trash menu_icon"></span>Deleted events</a></li>


              <li class="divider"></li>

              <li><a href=<%= destroy_user_session_path %> data-method="delete"><span class="glyphicon glyphicon-off menu_icon"></span>Sign out</a></li>

            </ul>
          </li>

        </ul>

      </div><!-- navbar-collapse -->
    </div><!-- container-fluid -->
  </nav>

  <% end %>

  <%= yield %>

</body>
</html>
